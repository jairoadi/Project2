@model Project1.Models.Missions

@{
    ViewBag.Title = "Missions";
}
<link href="~/Content/Style.css" rel="stylesheet" />
<h2>@ViewBag.Mission FAQ's</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Mission")">Missions</a>
                </li>
                <li class="active">@Model.mission_name Mission</li>
            </ol>

        </div>
    </div>

    <div class="row text-center">
        <div class=" col-md-offset-2 col-md-4 formap">
            <img class="map" src="@Model.mission_map" />
        </div>
        <div class="col-md-4">
            <img class="flag" src="@Model.mission_flag" />
        </div>
    </div>

    <div class="row">
        <br />
            <p>
                <strong><u>President</u>:</strong> @Model.mission_president
                <br />
                <br />
                <strong><u>Address</u>:</strong> @Model.mission_address
                <br />
                <br />
                <strong> <u>Language</u>:</strong> @Model.mission_language
                <br />
                <br />
                <strong><u>Climate</u>:</strong> @Model.mission_climate
                <br />
                <br />
                <strong><u>Religion</u>:</strong> @Model.mission_religion
            </p>

        <div class="row">
            <h2>FAQ</h2>
            <br />
            <div class="panel-group" id="accordion">
                @foreach (var item in ViewBag.currentQuestions)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                                    @item.question

                                </a>
                            </h4>
                        </div>
                        <div id="#collapse3" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <!--Beggining comment-->
                                <div class="comments">
                                    <!--the comment will be displayed here-->
                                    <div class="comment-wrap">
                                        <div class="photo">
                                            <div class="avatar" style="background-image: url('https://s3.amazonaws.com/uifaces/faces/twitter/jsa/128.jpg')"></div>
                                        </div>
                                        <div class="comment-block">
                                            <p class="comment-text">
                                                @item.answer
                                            </p>
                                            <div class="bottom-comment">
                                                <div class="comment-date">Aug 24, 2014  2:35 PM</div>
                                                <ul class="comment-actions">
                                                    <li class="reply" id="reply"><a href="@Url.Action("Edit", "MissionQuestions", new { })">Reply</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    




                                </div>
                                <!--Ending comment-->

                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>

<br />
        <div class="row">

    </div>

    
</div>

<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBHWEJG6chZqN3wBv30iXHVXMRcIJ94ixc&callback=initMap">
</script>

    

